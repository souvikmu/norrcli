{
	"compilerOptions": {
		"target": "ES2022",
		"lib": ["dom", "es2015", "es5", "es6", "ES2022"],
		"module": "ESNext",
		"rootDir": "./src",
		"outDir": "./build",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"noImplicitAny": true
	},
	"include": ["src"],
	"exclude": ["node_modules"],
	"ts-node": {
		"esm": true,
		"pretty": true
	}
}
